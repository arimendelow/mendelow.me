---
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
---

<header class="px-5 pb-8 pt-12">
	<nav class="mx-auto flex w-full max-w-[42rem] items-center justify-between text-[1rem]">
		<a href="/" class="font-semibold text-[#111] no-underline transition-colors hover:text-[#1f4a8a]">
			Ari Mendelow
		</a>
		<a
			href="/about"
			class:list={[
				'text-[#555] no-underline transition-colors hover:text-[#1f4a8a]',
				{ 'underline decoration-[#b5bfcc] underline-offset-4': pathname === '/about' },
			]}
		>
			About
		</a>
	</nav>
</header>
