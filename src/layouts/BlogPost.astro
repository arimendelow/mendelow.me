---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';

interface Props extends CollectionEntry<'blog'>['data'] {
	readingTime: number;
}

const { title, description, pubDate, readingTime } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={`${title} | ${SITE_TITLE}`} description={description} />
	</head>

	<body>
		<Header />
		<main class="pb-12">
			<article>
				<header class="mb-8 border-b border-[#e8ecf3] pb-6 sm:mb-10">
					<h1 class="text-[1.9rem] font-semibold leading-tight text-[#111] sm:text-[2.2rem]">{title}</h1>
					<p class="mt-3 text-[0.9rem] text-[#667082]">
						<FormattedDate date={pubDate} /> <span aria-hidden="true">&middot;</span> {readingTime} min read
					</p>
				</header>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
