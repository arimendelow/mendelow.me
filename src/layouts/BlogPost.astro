---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';

interface Props extends CollectionEntry<'blog'>['data'] {
	readingTime: number;
}

const { title, description, pubDate, readingTime } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={`${title} | ${SITE_TITLE}`} description={description} />
	</head>

	<body>
		<Header />
		<main class="pb-10">
			<article>
				<header class="mb-10">
					<h1 class="text-[2rem] font-semibold leading-tight text-[#111]">{title}</h1>
					<p class="mt-3 text-sm text-[#666]">
						<FormattedDate date={pubDate} /> <span aria-hidden="true">&middot;</span> {readingTime} min read
					</p>
				</header>
				<div class="post-body">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
