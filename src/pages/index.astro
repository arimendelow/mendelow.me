---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getReadingTime } from '../utils/readingTime';

const posts = (await getCollection('blog')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="min-h-screen flex flex-col">
		<Header />
		<main class="flex-1 pb-16">
			<section>
				<p class="max-w-[42rem] text-[1rem] font-normal leading-8 text-[#444] dark:text-[#aaa]">
					Mendelow Studio builds software and writes about the tradeoffs behind product and engineering
					decisions. This is our working notebook: project notes, mistakes worth documenting, and small lessons
					that compound over time.
				</p>
			</section>

			<section class="mt-10 sm:mt-12">
				<ul class="space-y-8 sm:space-y-10">
					{
						posts.map((post) => (
							<li>
								<a
									href={`/blog/${post.slug}/`}
									class="block min-h-11 text-[1.5rem] font-semibold leading-[1.25] text-[#111] underline decoration-[rgba(217,50,28,0.3)] underline-offset-4 transition-[color,text-decoration-color] duration-[140ms] ease-in-out hover:text-[var(--brand-red)] hover:decoration-[var(--brand-red)] dark:text-[#f5f5f5]"
								>
									{post.data.title}
								</a>
								<p class="mt-1 text-[0.875rem] font-normal text-[var(--brand-teal-muted)] dark:text-[#888]">
									<FormattedDate date={post.data.pubDate} /> <span aria-hidden="true">&middot;</span>{' '}
									{getReadingTime(post.body)} min read
								</p>
								<p class="mt-2 text-[1rem] font-normal leading-7 text-[#555] dark:text-[#aaa]">
									{post.data.description}
								</p>
							</li>
						))
					}
				</ul>
			</section>
			{
				posts.length === 0 && (
					<section class="mt-10 sm:mt-12">
						<p class="text-[1rem] text-[var(--muted)]">
							No posts yet. The first one should land soon.
						</p>
					</section>
				)
			}
		</main>
		<Footer />
	</body>
</html>
