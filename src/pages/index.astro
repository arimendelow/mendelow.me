---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getReadingTime } from '../utils/readingTime';

const posts = (await getCollection('blog')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="pb-20">
			<section class="space-y-5 text-[1rem] text-[#555]">
				<p class="max-w-[40rem]">
					Mendelow Studio builds software and writes about the tradeoffs behind product and engineering
					decisions. This is our working notebook: project notes, mistakes worth documenting, and small lessons
					that compound over time.
				</p>
			</section>

			<hr class="my-20" />

			<section>
				<ul class="space-y-10">
					{
						posts.map((post) => (
							<li class="group space-y-2">
								<a
									href={`/blog/${post.slug}/`}
									class="text-[1.32rem] font-semibold leading-tight text-[#111] no-underline decoration-[#bcc4cf] underline-offset-3 transition-colors transition-[text-decoration-color] hover:text-[#d91c1c] hover:underline hover:decoration-[#d91c1c]"
								>
									{post.data.title}
								</a>
								<p class="text-sm text-[#666]">
									<FormattedDate date={post.data.pubDate} /> <span aria-hidden="true">&middot;</span>{' '}
									{getReadingTime(post.body)} min read
								</p>
								<p class="text-[0.98rem] text-[#666]">
									{post.data.description}
								</p>
							</li>
						))
					}
				</ul>
			</section>
			{
				posts.length === 0 && (
					<section>
						<p class="text-[#666]">
							No posts yet. The first one should land soon.
						</p>
					</section>
				)
			}
		</main>
		<Footer />
	</body>
</html>
